<%= form_with(model: [:admin, badge], local: true) do |form| %>
  <%= render 'shared/errors', resource: badge %>

  <div class="field">
    <%= form.label :name %>
    <%= form.select(:name, options_for_select(Badge::BADGE_NAMES), {}) %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image %>
  </div>

  <div class="field">
    <%= form.label :rule %>
    <%= form.text_field :rule %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
